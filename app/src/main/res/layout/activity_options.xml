<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="myapps.infection.OptionsActivity">

    <TextView android:text="@string/options" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="\t\t\tCrosshair size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option_title"
        android:id="@+id/options"
        android:layout_alignParentBottom="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crosshair_bar"
        android:layout_below="@+id/option_title"
        android:layout_alignLeft="@+id/option_title"
        android:layout_alignStart="@+id/option_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:max="5"
        android:indeterminate="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Settings/Highscore"
        android:id="@+id/button1"
        android:layout_marginBottom="129dp"
        android:layout_alignBottom="@+id/options"
        android:layout_centerHorizontal="true" />

</RelativeLayout>